@using MinimartWeb.Models;
@{
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model List<Product>

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">

        <!-- Topbar -->
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid">                   
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Danh sách sản phẩm</h6>
                </div>
             
                    <a href="/Admin/AdminChucNang/Product">Add Product</a>
              
                
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>ImgProduct</th>
                                    <th>ProductId</th>
                                    <th>ProductName</th>
                                    <th>CateName</th>
                                    <th>PriceProduct</th>
                                    <th>Discount</th>
                                    <th>IsHot</th>
                                    <th>Stock</th>
                                    <th>Avct</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>ImgProduct</th>
                                    <th>ProductId</th>
                                    <th>ProductName</th>
                                    <th>CateName</th>
                                    <th>PriceProduct</th>
                                    <th>Discount</th>
                                    <th>IsHot</th>
                                    <th>Stock</th>
                                    <th>Avct</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><img style="width: 50px" src="~/image/@item.ImgProduct" /></td>
                                        <td>@item.ProductId</td>
                                        <td>@item.ProductName</td>
                                        <td>@item.CateName</td>
                                        <td>@item.PriceProduct</td>
                                        <td>@item.Discount</td>
                                        <td>@item.IsHot</td>
                                        <td>@item.Stock</td>
                                        <td>
                                            <a href="/Admin/AdminChucNang/EditProduct?id=@item.ProductId" class="btn btn-warning">Sửa</a>
                                            <a href="/Admin/AdminChucNang/DeleteProduct?id=@item.ProductId" class="btn btn-danger">Xóa</a>
                                        </td>
                                    </tr>
                                }
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
</div>
